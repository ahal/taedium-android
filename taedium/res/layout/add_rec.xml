<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <include
    android:id="@+id/HeaderBar" 
    layout="@layout/header"/>
        
    <ScrollView    
	    android:id="@+id/svAdd"    
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/HeaderBar"
	    android:layout_marginTop="10dp">
	    
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
	           android:id="@+id/tvAddStarredRequired"
	           style="@style/BaseView"
	           android:layout_alignParentLeft="true"
	           android:layout_alignParentTop="true"
	           android:textColor="#FFFFFF"
	           android:layout_marginLeft="5dp"
	           android:layout_marginBottom="5dp"
	           android:textSize="12dp"
	           android:text="@string/tvAddStarredRequired">
	        </TextView>      
            <RelativeLayout
                android:id="@+id/rlAdd1"
                style="@style/StandardRelativeLayout"
                android:layout_below="@id/tvAddStarredRequired"
                android:background="@drawable/list_item_gradient"                
                android:layout_marginBottom="10dp">
                    <EditText
                        android:id="@+id/etAddName"
	                    style="@style/BaseView"
	                    android:layout_alignParentRight="true"
	                    android:layout_marginRight="5dp"
	                    android:maxLength="100"
	                    android:width="190dp">
                    </EditText>
                    <TextView
                        android:id="@+id/tvAddNameLabel"
                        style="@style/StandardLabel"
                        android:text="@string/tvName">
                    </TextView>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rlTags"
                style="@style/StandardRelativeLayout"
                android:layout_below="@id/rlAdd1"
                android:background="@drawable/list_item_gradient"
                android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/tvAddTagsLabel"
                        style="@style/BaseView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/tvAddTagsLabel">
                    </TextView>
                    <EditText
                        android:id="@+id/etTags"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"                        
                        android:layout_below="@id/tvAddTagsLabel"
                        android:maxLength="256"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                    </EditText>
                    <TextView
                        android:id="@+id/tvAddTagsFormatDescription"
                        style="@style/BaseView"
                        android:layout_below="@id/etTags"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000"
                        android:textSize="12dp"
                        android:text="@string/tvAddTagsFormatDescription">
                    </TextView>                        
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rlAdd2"
                style="@style/StandardRelativeLayout"
                android:layout_below="@id/rlTags"
                android:layout_marginBottom="10dp"
                android:background="@drawable/list_item_gradient">                    
                    <TextView
                        android:id="@+id/tvAddDescriptionLabel"                        
                        style="@style/BaseView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/tvDescription">
                    </TextView>
                    <EditText
                        android:id="@+id/etAddDescription"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"                        
                        android:layout_below="@id/tvAddDescriptionLabel"
                        android:maxLength="256"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                    </EditText>
                </RelativeLayout>
                
                <RelativeLayout
                        android:id="@+id/rlAdd3"
                        style="@style/StandardRelativeLayout"
                        android:layout_below="@id/rlAdd2"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/list_item_gradient">
                        <TextView
                             android:id="@+id/tvNumPeopleLabel1"
                             style="@style/StandardLabel"                    
                             android:text="@string/tvNumPeopleLabel1">
                        </TextView>             
                        <EditText
                                android:id="@+id/etMinPeople"
                                style="@style/StandardLayout"
			                    android:layout_toRightOf="@id/tvNumPeopleLabel1"
			                    android:hint="@string/default_num_people"
			                    android:numeric="integer"
			                    android:maxLength="3"
			                    android:width="50dp">
                         </EditText>
                        <TextView
                            android:id="@+id/tvNumPeopleLabel2"
                            style="@style/StandardLayout"
                            android:layout_toRightOf="@id/etMinPeople"
                            android:text="@string/tvNumPeopleLabel2">
                        </TextView>
                        <EditText
                            android:id="@+id/etMaxPeople"
                            style="@style/StandardLayout"
                            android:layout_toRightOf="@id/tvNumPeopleLabel2"
                            android:hint="@string/default_num_people"
                            android:numeric="integer"
		                    android:maxLength="3"
		                    android:width="50dp">
                        </EditText>
                        <TextView
                            android:id="@+id/tvNumPeopleLabel3"             
                            style="@style/StandardLayout"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@id/etMaxPeople"
                            android:text="@string/tvNumPeopleLabel3">
                        </TextView>
            </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlAdd4"
            style="@style/StandardRelativeLayout"
            android:layout_below="@id/rlAdd3"
            android:layout_marginBottom="10dp"
            android:background="@drawable/list_item_gradient">
	                    
	        <CheckBox
	            android:id="@+id/cbIndoor"
	            style="@style/StandardControl"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:textColor="#000000"
	            android:text="@string/cbIndoor"
	            android:layout_marginLeft="5dp">
	        </CheckBox>
	        <CheckBox
	            android:id="@+id/cbOutdoor"
	            style="@style/StandardControl"
	            android:layout_below="@id/cbIndoor"
	            android:layout_alignParentLeft="true"
	            android:textColor="#000000"
	            android:text="@string/cbOutdoor"
	            android:layout_marginLeft="5dp">
	        </CheckBox>
	        <CheckBox
	            android:id="@+id/cbAroundTown"
	            style="@style/StandardControl"
	            android:layout_below="@id/cbOutdoor"
	            android:layout_alignParentLeft="true"
	            android:textColor="#000000"
	            android:text="@string/cbAroundTown"
	            android:layout_marginLeft="5dp">
	        </CheckBox>
        </RelativeLayout>

            <RadioGroup
                android:id="@+id/rgAges"
                style="@style/BaseView"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_below="@id/rlAdd4"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/list_item_gradient">
                <RadioButton
                    android:id="@+id/rbAllAges"
                    style="@style/StandardControl"
                android:textColor="#000000"
                    android:text="@string/rbAllAges"
                    android:layout_marginLeft="5dp">
                </RadioButton>
                <RadioButton
                    android:id="@+id/rbKidsOnly"
                    style="@style/StandardControl"
                android:textColor="#000000"
                    android:text="@string/rbKidsOnly"
                    android:layout_marginLeft="5dp">
                </RadioButton>
                <RadioButton
                    android:id="@+id/rbAdultOnly"
                    style="@style/StandardControl"
                android:textColor="#000000"
                    android:text="@string/rbAdultOnly"
                    android:layout_marginLeft="5dp">
                </RadioButton>        
            </RadioGroup>
            
            <RelativeLayout
                android:id="@+id/rlAdd5"
                style="@style/StandardRelativeLayout"
                android:layout_below="@id/rgAges"
                android:layout_marginBottom="10dp"
                android:background="@drawable/list_item_gradient">
                <RelativeLayout
                    android:id="@+id/rlStartTime"
                    style="@style/BaseView">
	                <TextView
	                    android:id="@+id/tvSTimeLabel"
	                    style="@style/StandardLabel"
	                    android:text="@string/tvStartTime">
	                </TextView>
	                <TextView
	                    android:id="@+id/tvSTimeView"
	                    style="@style/StandardLayout"
	                    android:layout_centerInParent= "true"
	                    android:text="@string/default_start_time">
	                </TextView>
	                <Button
	                    android:id="@+id/bSTimeUpdate"
	                    style="@style/StandardButton"
	                    android:layout_alignParentRight="true"
	                    android:text="@string/update">
	                </Button>
	            </RelativeLayout>
	            <RelativeLayout
	                android:id="@+id/rlEndTime"
	                style="@style/BaseView"
	                android:layout_below="@id/rlStartTime"> 
	                <TextView
	                    android:id="@+id/tvETimeLabel"
	                    style="@style/StandardLabel"
	                    android:text="@string/tvEndTime">
	                </TextView>
	                <TextView
	                    android:id="@+id/tvETimeView"
	                    style="@style/StandardLayout"
	                    android:layout_centerInParent="true"
	                    android:text="@string/default_end_time">
	                </TextView>
	                <Button
	                    android:id="@+id/bETimeUpdate"
	                    style="@style/StandardButton"
	                    android:layout_alignParentRight="true"
	                    android:text="@string/update">
	                </Button>
	            </RelativeLayout>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rlAdd6"
                style="@style/StandardRelativeLayout"
                android:layout_below="@id/rlAdd5"
                android:layout_marginBottom="10dp"
                android:background="@drawable/list_item_gradient">
                <TextView
                     android:id="@+id/tvDurationLabel1"
                     style="@style/StandardLabel"            
                     android:text="@string/tvDurationLabel1">
                </TextView>     
                <EditText
                    android:id="@+id/etMinDuration"
                    style="@style/StandardLayout"
                    android:layout_toRightOf="@id/tvDurationLabel1"
                    android:numeric="integer"
                    android:maxLength="4"
                    android:width="65dp">
                 </EditText>
                <TextView
                    android:id="@+id/tvDurationLabel2"
                    style="@style/StandardLayout"
                    android:layout_toRightOf="@id/etMinDuration"
                    android:text="@string/tvDurationLabel2">
                </TextView>
                <EditText
                    android:id="@+id/etMaxDuration"
                    style="@style/StandardLayout"
                    android:layout_toRightOf="@id/tvDurationLabel2"
                    android:numeric="integer"
                    android:maxLength="4"
                    android:width="65dp">
                </EditText>
                <TextView
                    android:id="@+id/tvDurationLabel3"         
                    style="@style/StandardLayout"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/etMaxDuration"
                    android:text="@string/tvDurationLabel3">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlAdd7"
                style="@style/StandardRelativeLayout"
                android:layout_below="@id/rlAdd6"
                android:layout_marginBottom="10dp"
                android:background="@drawable/list_item_gradient">
		        <TextView
		            android:id="@+id/tvCostLabel1"
		            style="@style/StandardLayout"            
		            android:text="@string/tvCostLabel1">
		        </TextView>
		        <EditText
		            android:id="@+id/etCost"
		            style="@style/StandardLayout"
		            android:layout_toRightOf="@id/tvCostLabel1"
		            android:numeric="decimal"            
		            android:width="70dp">
		        </EditText>
		        <CheckBox
		            android:id="@+id/cbCostPerPerson"
		            style="@style/StandardLayout"
		            android:layout_toRightOf="@id/etCost"
		            android:textColor="#000000"
		            android:text="@string/tvCostLabel2">
                </CheckBox>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/rlAdd8"
                style="@style/StandardRelativeLayout"
                android:layout_below="@id/rlAdd7"
                android:layout_marginBottom="10dp"
                android:background="@drawable/list_item_gradient">
                <CheckBox
                    android:id="@+id/cbAddMyLocation"
                    style="@style/StandardLayout"
                    android:layout_alignParentTop="true"
                    android:text="@string/tvLocationLabel1">
                </CheckBox>
                <CheckBox
                    android:id="@+id/cbAddUseMap"
                    style="@style/StandardLayout"
                    android:layout_below="@id/cbAddMyLocation"
                    android:text="@string/tvLocationLabel2">
                </CheckBox>
                <CheckBox
                    android:id="@+id/cbAddSpecifyAddress"
                    style="@style/StandardLayout"
                    android:layout_below="@id/cbAddUseMap"
                    android:text="@string/tvLocationLabel3">
                </CheckBox>
            </RelativeLayout>
            
            <Button
                android:id="@+id/bAddSubmit"
                style="@style/StandardButton"
                android:layout_below="@id/rlAdd8"
                android:text="@string/submit"
                android:width="80dp">
            </Button>
            
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>