<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlAddMain"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <include
        android:id="@+id/HeaderBar" 
        layout="@layout/header">
    </include>
    <RelativeLayout
        android:id="@+id/rlAdd1"
        style="@style/StandardRelativeLayout"
        android:layout_below="@id/HeaderBar"
        android:background="@drawable/list_item_gradient"                
        android:layout_marginBottom="10dp">
        <EditText
            android:id="@+id/etAddName"
            style="@style/BaseView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:maxLength="100"
            android:width="190dp">
        </EditText>
        <TextView
            android:id="@+id/tvAddNameLabel"
            style="@style/StandardLabel"
            android:text="@string/tvName">
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlAdd2"
        style="@style/StandardRelativeLayout"
        android:layout_below="@id/rlAdd1"
        android:layout_marginBottom="10dp"
        android:background="@drawable/list_item_gradient">                    
        <TextView
            android:id="@+id/tvAddDescriptionLabel"                        
            style="@style/BaseView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/tvDescription">
        </TextView>
        <EditText
            android:id="@+id/etAddDescription"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"                        
            android:layout_below="@id/tvAddDescriptionLabel"
            android:maxLength="256"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </EditText>
    </RelativeLayout>
    <include
        android:id="@+id/NavButtons"
        layout="@layout/add_nav_buttons">
    </include>
</RelativeLayout> 
